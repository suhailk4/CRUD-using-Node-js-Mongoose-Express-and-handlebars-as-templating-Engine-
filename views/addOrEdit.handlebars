<h3 class="text-center py-2">  {{viewTitle}} </h3> 

<form action="/employee" method="POST" autocomplete="off">

    <input type="hidden" name="_id" value="{{employee._id}}">

    <div class="form-group">

            <label for="name"> Full Name </label>
            <input type="text" class="form-control" value='{{employee.fullname}}' name="fullname" >
            
    </div>




    <div class="form-group">

            <label for="email"> Email </label>
            <input type="text" id="email" class="form-control" value="{{employee.email}}" name="email" >
            
    </div>



       
     <div class="form-row">
    
    
         <div class="form-group col-md-6">

            <label for="mobile" > Mobile </label>
            <input type="text" id="mobile" class="form-control" name="mobile"  value='{{employee.mobile}}'>
            
        </div>
        
        <div class="form-group col-md-6">

            <label for="city"> City </label>
            <input type="text" id="city" class="form-control" value="{{employee.city}}" name="city" >
            
         </div>


    </div>

    <button type="submit" class="btn btn-block btn-primary"> Submit</button>  
    {{#if employee._id}}
    
    
   <a href="list" class="btn btn-block btn-dark"> View All </a>
    
    {{else}}

   <a href="employee/list" class="btn btn-block btn-dark"> View All </a>
    {{/if}}

</form>

